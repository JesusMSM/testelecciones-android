<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#E3F2FD"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:paddingTop="10dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_pregunta">

            <TextView
                android:id="@+id/categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="ECONOMÍA"
                android:textAllCaps="true"
                android:textSize="14pt"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/pregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="¿Tienes pensado votar a Francisco Franco en las próximas elecciones, chaval?"
                android:textSize="14pt"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/respuesta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_respuesta"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:text="Sí, y de carácter retroactivo. Es decir, el propietario salda la totalidad de la deuda si vende la casa al banco, aunque la deuda sea mayor"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingRight="6dp"
            android:paddingEnd="6dp"
            android:gravity="center"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/respuesta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Sí, y de carácter retroactivo. Es decir, el propietario"
            android:background="@drawable/button_respuesta"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingRight="6dp"
            android:paddingEnd="6dp"
            android:gravity="center"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/respuesta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Sí, y de carácter retroactivo. Es decir, el propietario salda la totalidad de la deuda si vende la casa al banco, aunque la deuda sea mayor"
            android:background="@drawable/button_respuesta"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingRight="6dp"
            android:paddingEnd="6dp"
            android:gravity="center"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/barra_progreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progressbar"/>
        <TextView
            android:id="@+id/porcentajeProgreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="97%"
            android:textColor="@color/black"
            android:textSize="16pt"/>
    </LinearLayout>




</RelativeLayout>