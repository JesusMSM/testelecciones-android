<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutClickable"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/button_pregunta"
    android:gravity="center_vertical">
    <com.moonfish.testeleccionesgenerales2015.text.TitilliumLightTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fecha"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/colorRespuesta"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/encuestaIcon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_help_white_24dp"/>
    <com.moonfish.testeleccionesgenerales2015.text.TitilliumRegularTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:id="@+id/titleHeader"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Header"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/respuestasLayout">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/respuestasDoneLayout"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">
        <com.moonfish.testeleccionesgenerales2015.text.TitilliumLightTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/greeHasRespondido"
            android:id="@+id/hasRespondido"/>
    </LinearLayout>
</LinearLayout>